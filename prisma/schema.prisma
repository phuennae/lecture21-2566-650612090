generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Course {
  id String @id @default(auto()) @map("_id") @db.ObjectId
 
  courseNo    String       @unique
  title       String       @unique
  Enrollment Enrollment[]
 
  @@map("courses")
}

model Student {
    id        String  @id @default(auto()) @map("_id") @db.ObjectId
    studentId String  @unique
    firstName String
    lastName  String
    program   Program

    @@map("students")
}

enum Program {
    CPE
    ISNE
}

model Enrollment {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    courseNo  String
    studentId String

    course Course @relation(fields: [courseNo], references: [courseNo])

    @@unique([courseNo, studentId])
    @@map("enrollments")
}

model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    username  String  @unique
    password  String
    studentId String?
    role      Role

    @@map("users")
}

enum Role {
    STUDENT
    ADMIN
}